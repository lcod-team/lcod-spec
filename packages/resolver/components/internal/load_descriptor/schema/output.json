{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "descriptorPath": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "string",
      "description": "Path to the resolved lcp.toml file."
    },
    "descriptorText": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "string",
      "description": "Raw descriptor contents."
    },
    "descriptor": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "description": "Parsed descriptor content."
    },
    "projectPath": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": [
        "string",
        "null"
      ],
      "description": "Passthrough of the project root path."
    },
    "configPath": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": [
        "string",
        "null"
      ],
      "description": "Passthrough of the resolve.config.json path."
    },
    "outputPath": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": [
        "string",
        "null"
      ],
      "description": "Passthrough of the explicit output path."
    }
  },
  "description": "Load the project descriptor (`lcp.toml`) and expose its parsed contents."
}