{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "projectPath": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "string",
      "minLength": 1,
      "description": "Absolute or relative path to the project root containing lcp.toml."
    },
    "configPath": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": [
        "string",
        "null"
      ],
      "description": "Optional explicit resolve.config.json path."
    },
    "outputPath": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": [
        "string",
        "null"
      ],
      "description": "Optional explicit lockfile output path."
    }
  },
  "required": [
    "projectPath"
  ],
  "description": "Load the project descriptor (`lcp.toml`) and expose its parsed contents."
}