{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["projectPath"],
  "properties": {
    "projectPath": {
      "type": "string",
      "minLength": 1,
      "description": "Absolute or relative path to the project root containing lcp.toml."
    },
    "configPath": {
      "type": ["string", "null"],
      "description": "Optional resolve.config.json path forwarded downstream."
    },
    "outputPath": {
      "type": ["string", "null"],
      "description": "Optional explicit lockfile output path forwarded downstream."
    }
  },
  "additionalProperties": true
}
