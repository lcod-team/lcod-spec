{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "tooling/resolver/register_components output",
  "type": "object",
  "properties": {
    "registered": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of components successfully registered."
    },
    "warnings": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Warnings emitted while resolving or registering components."
    },
    "sources": {
      "type": "object",
      "description": "Map of component IDs to source descriptors that downstream resolver stages can merge into their source list.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "path": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        },
        "required": ["type"]
      },
      "default": {}
    }
  },
  "required": ["registered"],
  "additionalProperties": false
}
