{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "tooling/registry/fetch input",
  "type": "object",
  "required": ["entry", "cache"],
  "properties": {
    "entry": {
      "type": "object",
      "required": ["id", "version", "manifest", "registryId"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 },
        "manifest": { "type": "string", "minLength": 1 },
        "registryId": { "type": "string", "minLength": 1 },
        "sha256": { "type": "string" },
        "artifact": {
          "type": "object",
          "required": ["url"],
          "properties": {
            "url": { "type": "string", "minLength": 1 },
            "sha256": { "type": "string" },
            "compression": { "type": "string" },
            "path": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "registry": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string" },
        "url": { "type": "string" }
      },
      "additionalProperties": true
    },
    "cache": {
      "type": "object",
      "required": ["root"],
      "properties": {
        "root": { "type": "string", "minLength": 1 },
        "manifestsDir": { "type": "string", "minLength": 1 },
        "artifactsDir": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "forceRefresh": { "type": "boolean" }
  },
  "additionalProperties": false
}
