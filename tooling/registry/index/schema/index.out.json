{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "tooling/registry/index output",
  "type": "object",
  "required": ["registries", "entries", "packages", "errors"],
  "properties": {
    "registries": {
      "type": "array",
      "items": { "$ref": "#/$defs/registry" }
    },
    "entries": {
      "type": "array",
      "items": { "$ref": "#/$defs/componentEntry" }
    },
    "packages": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "$ref": "#/$defs/componentEntry" }
      }
    },
    "errors": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "$defs": {
    "registry": {
      "type": "object",
      "required": ["id", "priority"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string" },
        "url": { "type": "string" },
        "priority": { "type": "integer" },
        "raw": {
          "type": "object",
          "description": "Original JSON line."
        }
      },
      "additionalProperties": true
    },
    "componentEntry": {
      "type": "object",
      "required": ["id", "version", "manifest", "registryId", "priority", "order"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 },
        "manifest": { "type": "string", "minLength": 1 },
        "sha256": { "type": "string" },
        "registryId": { "type": "string", "minLength": 1 },
        "priority": { "type": "integer" },
        "order": { "type": "integer" },
        "raw": {
          "type": "object",
          "description": "Original JSON line."
        }
      },
      "additionalProperties": true
    }
  }
}
