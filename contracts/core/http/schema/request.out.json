{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lcod.team/schemas/contracts/core/http/request/output.json",
  "title": "Core HTTP Request Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "headers"],
  "properties": {
    "status": {
      "type": "integer",
      "minimum": 100,
      "maximum": 599,
      "description": "HTTP status code"
    },
    "statusText": {
      "type": "string",
      "description": "Status message returned by the server"
    },
    "headers": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      },
      "description": "Response headers as string arrays"
    },
    "body": {
      "type": ["string", "null"],
      "description": "Response body encoded according to bodyEncoding"
    },
    "bodyEncoding": {
      "type": "string",
      "enum": ["utf-8", "base64", "json"],
      "description": "Encoding applied to body"
    },
    "stream": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "description": "Stream handle identifier assigned by the host runtime."
        },
        "encoding": {
          "type": "string",
          "enum": ["utf-8", "base64", "json", "binary"],
          "description": "Default encoding for chunks."
        },
        "mediaType": {
          "type": "string",
          "description": "MIME type hint for the response body."
        },
        "storage": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "kind": {
              "type": "string",
              "enum": ["memory", "file", "external"],
              "description": "Where the stream buffers data."
            },
            "path": {
              "type": "string",
              "description": "Absolute path when kind = file."
            },
            "size": {
              "type": "integer",
              "minimum": 0,
              "description": "Total size when known."
            }
          }
        },
        "metadata": {
          "type": "object",
          "description": "Implementation-defined metadata (timestamps, origin, etc.)."
        }
      }
    },
    "timings": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "start": { "type": "string", "format": "date-time" },
        "end": { "type": "string", "format": "date-time" },
        "durationMs": { "type": "integer", "minimum": 0 }
      }
    },
    "redirects": {
      "type": "array",
      "items": { "type": "string", "format": "uri" }
    }
  }
}
