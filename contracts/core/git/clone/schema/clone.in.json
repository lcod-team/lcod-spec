{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lcod.team/schemas/contracts/core/git/clone/input.json",
  "title": "Core Git Clone Input",
  "type": "object",
  "additionalProperties": false,
  "required": ["url"],
  "properties": {
    "url": {
      "type": "string",
      "description": "Repository URL (https, ssh, or git protocol)."
    },
    "ref": {
      "type": "string",
      "description": "Commit SHA, tag, or branch to checkout."
    },
    "depth": {
      "type": "integer",
      "minimum": 1,
      "description": "Depth for shallow clones."
    },
    "subdir": {
      "type": "string",
      "description": "Subdirectory to expose from the repository."
    },
    "dest": {
      "type": "string",
      "description": "Desired destination directory name within the workspace."
    },
    "auth": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "token": { "type": "string" },
        "username": { "type": "string" },
        "password": { "type": "string" },
        "sshKeyRef": { "type": "string" }
      },
      "description": "Credential hints provided by the host runtime."
    }
  }
}
