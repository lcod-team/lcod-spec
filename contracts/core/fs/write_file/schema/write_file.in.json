{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lcod.team/schemas/contracts/core/fs/write_file/input.json",
  "title": "Filesystem Write File Input",
  "type": "object",
  "additionalProperties": false,
  "required": ["path", "data"],
  "properties": {
    "path": {
      "type": "string",
      "minLength": 1,
      "description": "Absolute or project-relative file path."
    },
    "data": {
      "type": "string",
      "description": "Payload to write. Interpreted according to `encoding`."
    },
    "encoding": {
      "type": "string",
      "enum": ["utf-8", "base64", "hex"],
      "description": "Encoding applied to `data`. Defaults to utf-8."
    },
    "append": {
      "type": "boolean",
      "description": "Append to the existing file when true; otherwise replace the contents."
    },
    "createParents": {
      "type": "boolean",
      "description": "Create parent directories when they are missing."
    },
    "mode": {
      "type": "string",
      "pattern": "^[0-7]{3,4}$",
      "description": "Optional POSIX file mode (octal string)."
    }
  }
}
