{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "path": {
      "type": "string",
      "description": "Normalized absolute path."
    },
    "exists": {
      "type": "boolean",
      "description": "True when the target was found."
    },
    "isFile": {
      "type": "boolean"
    },
    "isDirectory": {
      "type": "boolean"
    },
    "isSymlink": {
      "type": "boolean"
    },
    "size": {
      "type": "number",
      "description": "Byte size when a regular file."
    },
    "mtime": {
      "type": "string",
      "description": "ISO timestamp for last modification." ,
      "format": "date-time"
    },
    "ctime": {
      "type": "string",
      "description": "ISO timestamp for creation/change. ",
      "format": "date-time"
    }
  },
  "required": ["exists"]
}
