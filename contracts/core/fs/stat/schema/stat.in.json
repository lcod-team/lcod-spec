{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "path": {
      "type": "string",
      "description": "Absolute or relative path to inspect."
    },
    "followSymlinks": {
      "type": "boolean",
      "description": "Whether to follow symlinks (default true).",
      "default": true
    }
  },
  "required": ["path"]
}
