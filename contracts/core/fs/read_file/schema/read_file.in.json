{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lcod.team/schemas/contracts/core/fs/read_file/input.json",
  "title": "Filesystem Read File Input",
  "type": "object",
  "additionalProperties": false,
  "required": ["path"],
  "properties": {
    "path": {
      "type": "string",
      "minLength": 1,
      "description": "Absolute or project-relative path of the file to read."
    },
    "encoding": {
      "type": "string",
      "enum": ["utf-8", "base64", "hex"],
      "description": "Encoding to use for the returned data. Defaults to utf-8 when omitted."
    }
  }
}
