{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "core/json/decode@1 output",
  "type": "object",
  "additionalProperties": false,
  "required": ["value"],
  "properties": {
    "value": {
      "description": "Decoded JSON value."
    },
    "bytes": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of bytes consumed (UTF-8)."
    },
    "error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "offset": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["code", "message"],
      "additionalProperties": true,
      "description": "Structured parse error information."
    }
  }
}
