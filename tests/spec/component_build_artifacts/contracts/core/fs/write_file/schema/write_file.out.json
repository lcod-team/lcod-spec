{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "bytesWritten": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of bytes written to disk."
    },
    "mtime": {
      "type": "string",
      "format": "date-time",
      "description": "Last modification timestamp after writing."
    }
  },
  "required": [
    "bytesWritten"
  ],
  "description": "Write data to the local filesystem with optional encoding and metadata controls."
}